@{
    ViewBag.Title = "Server Error";
}

<div class="jumbotron text-center">
    <h1>Error Page</h1>
</div>
<div class="alert alert-danger" role="alert">
    <div class="row">
        <div class="col-4"><img class="img-fluid" alt="Responsive image" src="~/Images/ErrorPikachu.png" /></div>
        <div class="col d-flex align-items-center">
            <div class="row">
                <div class="col">
                    <h4 class="alert-heading">Oops! An error occurred</h4>
                    <p>@ViewBag.ErrorMessage</p>
                    <p class="mb-0">
                        Click &nbsp;&nbsp;<a class="btn btn-outline-secondary" asp-action="Index" asp-controller="home">
                            Here
                        </a>&nbsp;&nbsp; to go to home page.
                    </p>
                </div>
            </div>
            
        </div>
    </div>
    <hr>
</div>